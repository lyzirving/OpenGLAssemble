<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid_hor_0.85"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <SurfaceView
        android:id="@+id/view_surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guid_hor_0.85" />

    <TextView
        android:id="@+id/tv_rotate_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Rotate Model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guid_hor_0.85" />

    <SeekBar
        android:id="@+id/seek_rotate_model"
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintLeft_toRightOf="@+id/tv_rotate_model"
        app:layout_constraintTop_toBottomOf="@+id/guid_hor_0.85"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>